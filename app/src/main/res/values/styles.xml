<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--  application theme no action bar -->
    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- text button style HelloActivity -->
    <style name="PrimaryButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">Gotham Rounded</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- texthint in button form -->
    <style name="TextHintInButton">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">Gotham Rounded</item>
        <item name="android:textColor">#95989A</item>
        <item name="android:gravity">left|center</item>
        <item name="android:paddingLeft">15dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- text  tile for part home-->
    <style name="TextTitleIconHome">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">Gotham Rounded</item>
        <item name="android:textColor">#3D3D3D</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>
